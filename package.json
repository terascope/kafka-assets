{
    "name": "kafka-asset-bundle",
    "version": "3.5.0",
    "description": "A bundle of Kafka operations and processors for Teraslice",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*",
            "asset",
            "."
        ]
    },
    "scripts": {
        "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
        "lint:fix": "yarn lint --fix",
        "asset:build": "yarn && yarn --cwd ./asset build",
        "build": "tsc --build",
        "build:watch": "yarn build --watch",
        "setup": "yarn && yarn build",
        "test": "KAFKA_VERSION=3.2 ts-scripts test . --",
        "test:all": "yarn workspaces run test",
        "test:watch": "ts-scripts test --watch . --",
        "test:debug": "ts-scripts test --debug . --",
        "publish:changed": "./scripts/publish.sh"
    },
    "repository": "git@github.com:terascope/kafka-assets.git",
    "author": "Terascope, LLC <info@terascope.io>",
    "license": "MIT",
    "devDependencies": {
        "@terascope/eslint-config": "^0.7.1",
        "@terascope/job-components": "^0.59.0",
        "@terascope/scripts": "^0.53.1",
        "@types/jest": "^29.5.3",
        "@types/node": "^18.14.2",
        "@types/uuid": "^9.0.2",
        "bunyan": "^1.8.15",
        "eslint": "^8.49.0",
        "jest": "^29.6.2",
        "jest-extended": "^4.0.0",
        "terafoundation_kafka_connector": "^0.11.0",
        "teraslice-test-harness": "^0.29.0",
        "ts-jest": "^29.1.1",
        "typescript": "^4.9.5",
        "uuid": "^9.0.0"
    },
    "engines": {
        "node": ">=14.17.0"
    },
    "terascope": {
        "root": true,
        "testSuite": "stream",
        "tests": {
            "suites": {
                "unit": [],
                "stream": [
                    "kafka"
                ]
            }
        },
        "docker": {
            "registries": [
                "terascope/teraslice"
            ]
        },
        "npm": {
            "registry": "https://registry.npmjs.org/"
        }
    }
}
