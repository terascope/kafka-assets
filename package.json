{
    "name": "kafka-asset-bundle",
    "version": "2.1.6",
    "description": "A bundle of Kafka operations and processors for Teraslice",
    "private": true,
    "scripts": {
        "lint": "tslint --project tsconfig.json --format verbose",
        "lint:all": "yarn workspaces run lint",
        "lint:fix": "yarn lint --fix",
        "prepare": "yarn workspaces run build",
        "postinstall": "yarn --cwd ./asset --prod install",
        "asset:build": "yarn run build",
        "build": "rimraf asset/dist; tsc --project tsconfig.json --pretty",
        "build:watch": "yarn build --watch",
        "test": "jest --colors --maxWorkers=2 --detectOpenHandles --forceExit",
        "test:all": "yarn workspaces run test",
        "test:watch": "jest --forceExit --coverage=false --notify --watch --onlyChanged",
        "test:debug": "env DEBUG=\"${DEBUG:-*teraslice*}\" jest --colors --detectOpenHandles --forceExit --coverage=false --runInBand",
        "publish:changed": "./scripts/publish.sh"
    },
    "repository": "git@github.com:terascope/kafka-assets.git",
    "author": "Terascope, LLC <info@terascope.io>",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^24.0.15",
        "@types/lodash.once": "^4.1.6",
        "@types/node": "^12.6.2",
        "@types/uuid": "^3.4.4",
        "bunyan": "^1.8.12",
        "jest": "^24.8.0",
        "jest-extended": "^0.11.2",
        "markdown-table": "^1.1.3",
        "markdown-toc": "^1.2.0",
        "rimraf": "^2.6.3",
        "teraslice-test-harness": "^0.8.1",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "tslint": "^5.18.0",
        "tslint-config-airbnb": "^5.11.1",
        "typescript": "^3.5.3",
        "uuid": "^3.3.2"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "workspaces": {
        "packages": [
            "packages/*",
            "."
        ],
        "nohoist": [
            "asset"
        ]
    }
}
