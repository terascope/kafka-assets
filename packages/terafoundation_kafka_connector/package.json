        "test:debug": "env DEBUG='*teraslice*' jest --detectOpenHandles --coverage=false --runInBand"
    },
    "homepage": "https://github.com/terascope/kafka-assets",
    "repository": "git@github.com:terascope/kafka-assets.git",
    "author": "Terascope, LLC <info@terascope.io>",
    "license": "MIT",
    "dependencies": {
        "node-rdkafka": "~2.9.0"
    },
    "devDependencies": {
        "@terascope/job-components": "^0.35.0",
        "@types/convict": "^4.2.1",
        "convict": "^4.4.1"
    },
    "engines": {
        "node": ">=8.0.0"
    }
}
