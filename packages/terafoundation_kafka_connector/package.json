{
    "name": "terafoundation_kafka_connector",
    "displayName": "Terafoundation Kafka Connector",
    "version": "2.0.2",
    "description": "Terafoundation connector for Kafka producer and consumer clients.",
    "homepage": "https://github.com/terascope/kafka-assets",
    "repository": "git@github.com:terascope/kafka-assets.git",
    "license": "MIT",
    "author": "Terascope, LLC <info@terascope.io>",
    "type": "module",
    "main": "dist/src/index.js",
    "typings": "dist/src/index.d.ts",
    "files": [
        "dist/src/**/*"
    ],
    "scripts": {
        "build": "tsc --project ./tsconfig.json",
        "build:watch": "yarn build --watch",
        "prepare": "yarn build",
        "test": "ts-scripts test . --",
        "test:debug": "ts-scripts test --debug . --",
        "test:watch": "ts-scripts test --watch . --"
    },
    "dependencies": {
        "@confluentinc/kafka-javascript": "~1.8.0"
    },
    "devDependencies": {
        "@terascope/core-utils": "~2.2.0",
        "@terascope/job-components": "~2.2.0",
        "@terascope/scripts": "~2.2.0",
        "@types/convict": "~6.1.6",
        "convict": "~6.2.4"
    },
    "engines": {
        "node": ">=22.0.0",
        "yarn": ">=1.22.22"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "srcMain": "src/index.ts",
    "terascope": {
        "enableTypedoc": true,
        "testSuite": "stream"
    }
}
