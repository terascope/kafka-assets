{
    "name": "terafoundation_kafka_connector",
    "version": "0.3.0",
    "description": "Terafoundation connector for Kafka producer and consumer clients.",
    "publishConfig": {
        "access": "public"
    },
    "srcMain": "src/index.ts",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "scripts": {
        "lint": "tslint --project tsconfig.json --format verbose",
        "lint:fix": "yarn lint --fix",
        "prepare": "yarn build",
        "build": "tsc --project tsconfig.json --pretty",
        "build:watch": "yarn build --watch",
        "test": "jest",
        "test:watch": "jest --coverage=false --notify --watch --onlyChanged",
        "test:debug": "env DEBUG='*teraslice*' jest --detectOpenHandles --coverage=false --runInBand"
    },
    "homepage": "https://github.com/terascope/kafka-assets",
    "repository": "git@github.com:terascope/kafka-assets.git",
    "author": "Terascope, LLC <info@terascope.io>",
    "license": "MIT",
    "dependencies": {
        "node-rdkafka": "^2.5.1"
    },
    "devDependencies": {
        "@terascope/job-components": "^0.14.5",
        "@types/convict": "^4.2.1",
        "@types/jest": "^24.0.9",
        "@types/node": "^11.10.4",
        "convict": "^4.4.1",
        "jest": "^24.1.0",
        "jest-extended": "^0.11.1",
        "ts-jest": "^24.0.0",
        "tslint": "^5.13.1",
        "tslint-config-airbnb": "^5.11.1",
        "typescript": "^3.3.3333"
    },
    "engines": {
        "node": ">=8.0.0"
    }
}
