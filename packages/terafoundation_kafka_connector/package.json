{
    "name": "terafoundation_kafka_connector",
    "version": "0.6.1",
    "description": "Terafoundation connector for Kafka producer and consumer clients.",
    "publishConfig": {
        "access": "public"
    },
    "srcMain": "src/index.ts",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "scripts": {
        "prepare": "yarn build",
        "build": "tsc --project tsconfig.json",
